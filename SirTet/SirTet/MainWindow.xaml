            <TextBlock Canvas.Left="425" TextWrapping="Wrap" Text="Nick:" Canvas.Top="147"/>
            <Button x:Name="StartButton" Content="SirTet Activation" Canvas.Left="456" Canvas.Top="184" Width="101" Click="StartButton_Click"/>

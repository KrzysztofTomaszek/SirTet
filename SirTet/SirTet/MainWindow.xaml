                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
                <Grid Canvas.Left="0" Canvas.Top="10"  Background="Black"  x:Name="sirtet_Grid_HoldBlock" Margin="337,46,-117,642">
